<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SecondaryTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorSecondaryAccent</item>
    </style>

    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
       <!-- <item name="android:windowTranslucentNavigation">true</item> -->
    </style>

    <style name="FullWindowTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorSecondaryDark</item>
    </style>

    <style name="DatePickerSpinner">
        <item name="android:textSize">22sp</item>
        <item name="android:textColorPrimary">@color/colorSecondaryDark</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorSecondaryAccent</item>
    </style>

    <style name="MyTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
    </style>


</resources>
